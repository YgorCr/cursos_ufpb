!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Ufpb Sigaa Api'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Ufpb Sigaa Api'}"}
    = stylesheet_link_tag 'admin_application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    %header
      = render 'layouts/admin/navigation'
    %main{:role => "main"}
      = render 'layouts/admin/messages'
      = yield
